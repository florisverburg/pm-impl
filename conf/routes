# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Application
GET         /                                      controllers.Application.index()
GET         /about                                 controllers.Application.about()
GET         /contact                               controllers.Application.contact()

# Practical
GET         /practical                             controllers.PracticalController.list()
GET         /practical/invite/:id                  controllers.PracticalController.sendInvitePracticalGroup(id: Long)
GET         /practical/group/:id                   controllers.PracticalController.viewPracticalGroup(id: Long)
GET         /practical/:id                         controllers.PracticalController.view(id: Long)
GET         /practical/:id/:secret                 controllers.PracticalController.register(id: Long, secret: String)

# Profile
GET         /profile                               controllers.Profile.view()
GET         /profile/edit                          controllers.Profile.edit()
POST        /profile/edit                          controllers.Profile.save()

# Invite
GET         /invite/:id                            controllers.InviteController.view(id: Long)
GET         /acceptInvite/:id                      controllers.InviteController.acceptInvite(id: Long)
GET         /withdrawInvite/:id                    controllers.InviteController.withdrawInvite(id: Long)
GET         /resendInvite/:id                      controllers.InviteController.resendInvite(id: Long)
GET         /rejectInvite/:inviteId/:userId        controllers.InviteController.rejectInvite(inviteId: Long, userId: Long)

# Authentication
GET         /login                                 controllers.Authentication.login()
POST        /login                                 controllers.Authentication.authenticate()
GET         /register                              controllers.Authentication.login()
POST        /register                              controllers.Authentication.registration()
GET         /logout                                controllers.Authentication.logout()
GET         /auth                                  controllers.Authentication.auth(code: String ?= "", state: String, error: String ?= "", error_description: String ?= "")
GET         /verify/:mail/:token                   controllers.Authentication.verify(mail: String, token: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                          controllers.Assets.at(path="/public", file)

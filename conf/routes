# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Application
GET         /                             controllers.Application.index()
GET         /about                        controllers.Application.about()
GET         /contact                      controllers.Application.contact()
GET         /courses                      controllers.Application.courses()

# Practical
GET         /practical/:id                controllers.PracticalController.viewPractical(id: Long)
GET         /practical/:id/:secret        controllers.PracticalController.register(id: Long, secret: String)

# Profile
GET         /profile                      controllers.Profile.view()
GET         /profile/edit                 controllers.Profile.edit()
POST        /profile/edit                 controllers.Profile.save()

# Authentication
GET         /login                        controllers.Authentication.login()
POST        /login                        controllers.Authentication.authenticate()
GET         /register                     controllers.Authentication.login()
POST        /register                     controllers.Authentication.registration()
GET         /logout                       controllers.Authentication.logout()
GET         /auth                         controllers.Authentication.auth(code: String ?= "", state: String, error: String ?= "", error_description: String ?= "")
GET         /verify/:mail/:token          controllers.Authentication.verify(mail: String, token: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                 controllers.Assets.at(path="/public", file)
